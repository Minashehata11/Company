@model EmployeeViewModel
<div class="row">
    <div class="col-6">

        <div class="form-group">
            <label asp-for="@Model.Name" class="col-form-label"> </label>
            <input asp-for="@Model.Name" class="form-control" readonly />


        </div>
        <div class="form-group">
            <label asp-for="@Model.Salary" class="col-form-label"> </label>
            <input asp-for="@Model.Salary" class="form-control" readonly />


        </div>

        <div class="form-group">
            <label asp-for="@Model.IsActive" typeof="checkbox" class="col-form-label">  </label>
            <input type="checkbox" asp-for="@Model.IsActive" class="form-control" readonly />


        </div>
        <div class="form-group">
            <label asp-for="@Model.HiringDate" class="col-form-label"> </label>
            <input asp-for="@Model.HiringDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Department.Name" class="col-form-label"> </label>
            <input asp-for="@Model.Department.Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Department.Code" class="col-form-label"> </label>
            <input asp-for="@Model.Department.Code" class="form-control" readonly />
        </div>
    </div>

        <br />

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">Update</a>
        <a asp-action="Index"> Back</a>

    </div>
