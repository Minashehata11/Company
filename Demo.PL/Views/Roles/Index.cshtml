
@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>All Roles</h1>
<br />
<a asp-action="Create" asp-controller="Roles" class="btn btn-primary" > Add Role</a>
<br />
<br />

<form asp-action="Index" asp-controller="Roles">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search.." name="SearchValue" class="form-control" />
        </div>

        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>

                <th scope="col">Create At</th>
              

                <th scope="col">Details</th>

                <th scope="col"> Add or Delete To Users </th>


                <th scope="col">Delete</th>




            </tr>
        </thead>

        @foreach (var emp in Model)
        {
            <tbody class="table-group-divider">
                <tr>

                    <td>@emp.Name</td>
                    <td>@emp.CreateAt</td>
                   
                    

                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@emp.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="AddOrRemoveRoleToUser" asp-route-id="@emp.Id">
                            <i class="fas fa-eye"></i> AddOrRemoveRoleToUser
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@emp.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>


                </tr>

            </tbody>
        }


    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> NO Departemnts Found ..!  </h3>
    </div>
}



