@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
   // var RoleId = ViewBag.roleId;
}

<h1>AddOrRemoveRoleToUser</h1>

<form asp-action="AddOrRemoveRoleToUser" >
   
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
           
            <input   asp-for="@Model[i].IsSelected"  />
            <label  asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
            

        </div>
        <input  type="hidden" asp-for="@Model[i].UserName"/>
        <input type="hidden" asp-for="@Model[i].UserId" />

        
    }
    <input type="submit" name="save"  />
   

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }