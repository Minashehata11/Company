@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>





<h1>All Employess</h1>
<br />
<a asp-action="Create" class="btn btn-primary"> Create New User</a>
<br />
<br />

<form asp-action="Index" asp-controller="Users">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search.." name="SearchValue" class="form-control" />
        </div>

        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>

                <th scope="col">Email</th>
               




            </tr>
        </thead>

        @foreach (var user in Model)
        {
            <tbody class="table-group-divider">
                <tr>

                    <td>@user.UserName</td>
                 


                    <td>@user.Email</td>
                 

                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@user.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@user.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>


                </tr>

            </tbody>
        }


    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> NO Departemnts Found ..!  </h3>
    </div>
}

